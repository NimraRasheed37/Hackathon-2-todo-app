# ===================================================
# Todo App - Root Environment Variables
# ===================================================
# Copy this file to .env and fill in your values.
# This file documents ALL environment variables needed
# for both backend and frontend services.
# ===================================================

# ---------------------------------------------------
# DATABASE CONFIGURATION
# ---------------------------------------------------
# Neon PostgreSQL connection string
# Get yours at: https://neon.tech
DATABASE_URL=postgresql://neondb_owner:your-password@ep-xxx.us-east-1.aws.neon.tech/neondb?sslmode=require

# ---------------------------------------------------
# AUTHENTICATION SECRETS
# ---------------------------------------------------
# JWT Secret - MUST be at least 32 characters
# IMPORTANT: Backend JWT_SECRET and Frontend BETTER_AUTH_SECRET must match!
JWT_SECRET=your-super-secret-key-at-least-32-characters-long

# Better Auth Secret (for frontend)
# Must match JWT_SECRET for token validation
BETTER_AUTH_SECRET=${JWT_SECRET}

# ---------------------------------------------------
# SERVICE URLs
# ---------------------------------------------------

# Local Development
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# Production URLs (update after deployment)
PRODUCTION_FRONTEND_URL=https://your-app.vercel.app
PRODUCTION_BACKEND_URL=https://your-api.railway.app

# ---------------------------------------------------
# CORS CONFIGURATION (Backend)
# ---------------------------------------------------
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ---------------------------------------------------
# BACKEND SPECIFIC
# ---------------------------------------------------
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DAYS=7
ENVIRONMENT=development
LOG_LEVEL=INFO
API_PORT=8000
API_HOST=0.0.0.0

# ---------------------------------------------------
# FRONTEND SPECIFIC
# ---------------------------------------------------
BETTER_AUTH_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ---------------------------------------------------
# DOCKER COMPOSE (for local development)
# ---------------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=todoapp
